<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox spacing="30" alignment="TOP_CENTER"
      xmlns="http://javafx.com/javafx/21.0.6"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.newnomads.RegruterUgovoriController"
      stylesheets="@../../../css/potraznja.css">

    <padding>
        <Insets top="30" right="40" bottom="30" left="40"/>
    </padding>

    <Label text="Ugovori" styleClass="title-label"/>

    <TableView fx:id="ugovoriTable"
               styleClass="custom-table"
               VBox.vgrow="ALWAYS">

        <columns>
            <TableColumn fx:id="radnikCol" text="Radnik" minWidth="150"/>
            <TableColumn fx:id="firmaCol" text="Firma" minWidth="150"/>
            <TableColumn fx:id="datumPocetkaCol" text="PoÄetak" minWidth="110" maxWidth="130"/>
            <TableColumn fx:id="datumKrajaCol" text="Kraj" minWidth="110" maxWidth="130"/>
            <TableColumn fx:id="statusCol" text="Status" minWidth="100" maxWidth="120"/>
            <TableColumn fx:id="opisCol" text="Opis / Napomena" minWidth="200"/>
            <TableColumn fx:id="exportCol" text="Export" minWidth="120" maxWidth="150"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="20" alignment="CENTER">

        <Button text="+ Dodaj ugovor"
                onAction="#dodajUgovor"
                styleClass="action-button"
                prefWidth="160" prefHeight="40"/>
    </HBox>

</VBox>
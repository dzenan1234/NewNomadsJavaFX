<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.newnomads.DodajUgovorController"
           stylesheets="@../../../css/dodajpotraznju.css"
           styleClass="root">

    <VBox spacing="35" alignment="CENTER" styleClass="form-container" maxWidth="600" maxHeight="750">
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <VBox spacing="10" alignment="CENTER">
            <Label text="Sastavljanje ugovora" styleClass="title-label"/>
            <Label text="Unesite detalje novog radnog odnosa" styleClass="subtitle-label"/>
        </VBox>

        <VBox spacing="20" styleClass="input-container">

            <ComboBox fx:id="comboFirma" promptText="Izaberite firmu*"
                      maxWidth="Infinity" styleClass="form-field, combo-box"/>

            <ComboBox fx:id="comboPotraznje" promptText="Vezana potražnja*"
                      maxWidth="Infinity" styleClass="form-field, combo-box"/>

            <ComboBox fx:id="comboRadnik" promptText="Radnik*"
                      maxWidth="Infinity" styleClass="form-field, combo-box"/>

            <HBox spacing="15">
                <DatePicker fx:id="datePocetak" promptText="Datum početka*"
                            HBox.hgrow="ALWAYS" maxWidth="Infinity" styleClass="form-field, date-picker"/>
                <DatePicker fx:id="dateKraj" promptText="Datum kraja"
                            HBox.hgrow="ALWAYS" maxWidth="Infinity" styleClass="form-field, date-picker"/>
            </HBox>

            <TextArea fx:id="textOpis" promptText="Opis ugovora i napomene..."
                      prefRowCount="4" styleClass="form-field, text-area" wrapText="true"/>
        </VBox>

        <HBox spacing="15" alignment="CENTER">
            <Button text="Kreiraj ugovor" fx:id="btnPosalji" onAction="#posaljiUgovor"
                    styleClass="action-button, primary-button" prefWidth="200"/>

            <Button text="Otkaži" onAction="#odustani"
                    styleClass="action-button, secondary-button" prefWidth="120"/>
        </HBox>
    </VBox>
</StackPane>
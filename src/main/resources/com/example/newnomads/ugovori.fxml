<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.newnomads.FirmaUgovoriController"
            stylesheets="@../../../css/potraznja.css"
            styleClass="root">

    <center>
        <VBox spacing="30" alignment="TOP_CENTER">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <!-- Naslov -->
            <Label text="Ugovori" styleClass="title-label"/>

            <!-- Tabela -->
            <TableView fx:id="ugovoriTable" styleClass="custom-table" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID"/>
                    <TableColumn fx:id="colRadnik" text="Radnik"/>
                    <TableColumn fx:id="colDatumKreiranja" text="Kreirano"/>
                    <TableColumn fx:id="colDatumPocetka" text="PoÄetak"/>
                    <TableColumn fx:id="colDatumKraja" text="Kraj"/>
                    <TableColumn fx:id="colStatus" text="Status"/>
                    <TableColumn fx:id="colOpis" text="Opis"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <!-- Dugmad -->
            <HBox spacing="20" alignment="CENTER">
                <Button fx:id="btnPrihvati" text="Prihvati" onAction="#prihvatiUgovor"
                        styleClass="action-button" visible="false"/>
                <Button fx:id="btnOdbij" text="Odbij" onAction="#odbijUgovor"
                        styleClass="action-button" visible="false"/>

            </HBox>
        </VBox>
    </center>
</BorderPane>